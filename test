sonarqube-check:
  stage: sonarQubecheck
  tags: 
    # - shell-runner-framework
    - docker-runner-framework
  # script:
  #   - export SONAR_SCANNER_VERSION=4.7.0.2747
  #   - export SONAR_SCANNER_HOME=$HOME/.sonar/sonar-scanner-$SONAR_SCANNER_VERSION-linux
  #   - export PATH=$SONAR_SCANNER_HOME/bin:$PATH
  #   - export SONAR_SCANNER_OPTS="-server"
  #   - echo $PATH
  #   - sonar-scanner -h
  #   # - sonar-scanner -Dsonar.organization=gitlabfhict -Dsonar.projectKey=gitlabfhictsemester6 -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io

  image: 
    name: sonarsource/sonar-scanner-cli:latest
    entrypoint: [""]
  # variables:
  #   SONAR_USER_HOME: "${CI_PROJECT_DIR}/.sonar"  # Defines the location of the analysis task cache
  #   GIT_DEPTH: "0"  # Tells git to fetch all the branches of the project, required by the analysis task
  cache:
    key: "${CI_JOB_NAME}"
    paths:
      - .sonar/cache
  script: 
    - export SONAR_SCANNER_VERSION=4.7.0.2747
    - export SONAR_SCANNER_HOME=$HOME/.sonar/sonar-scanner-$SONAR_SCANNER_VERSION-linux
    - export PATH=$SONAR_SCANNER_HOME/bin:$PATH
    - export SONAR_SCANNER_OPTS="-server"
    - echo $PATH
    - sonar-scanner -Dsonar.organization=gitlabfhict -Dsonar.projectKey=gitlabfhictsemester6 -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io
  allow_failure: true
  only:
    - main


apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: python
spec:
  replicas: 1
  selector:
    matchLabels:
      app: python
  template:
    metadata:
      labels:
        app: python
    spec:
      containers:
        - name: python-article-service
          image: lyutenitsa5/article_service:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 8080
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 5
            timeoutSeconds: 5
            periodSeconds: 5
        - name: python-topic-service
          image: lyutenitsa5/topic_service:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 8081
          readinessProbe:
            httpGet:
              path: /
              port: 8082
            initialDelaySeconds: 5
            timeoutSeconds: 5
            periodSeconds: 5
        - name: python-user-service
          image: lyutenitsa5/user_service:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 8082
          readinessProbe:
            httpGet:
              path: /
              port: 8082
            initialDelaySeconds: 5
            timeoutSeconds: 5
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: python-service
  labels:
    app: python
spec:
  ports:
    - port: 8080
      targetPort: 8080
  selector:
    app: python
